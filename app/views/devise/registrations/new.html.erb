<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="mb-4">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row mb-3 g-3">
          <div class="col-md-6">
            <%= f.label :first_name, class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control #{resource.errors[:first_name].any? ? 'is-invalid' : ''}", autocomplete: "first_name" %>
            <% if resource.errors[:first_name].any? %>
              <div class="invalid-feedback">
                <%= resource.errors[:first_name].join(', ') %>
              </div>
            <% end %>
          </div>
          <div class="col-md-6">
            <%= f.label :last_name, class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control #{resource.errors[:last_name].any? ? 'is-invalid' : ''}", autocomplete: "last_name" %>
            <% if resource.errors[:last_name].any? %>
              <div class="invalid-feedback">
                <%= resource.errors[:last_name].join(', ') %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row mb-3 g-3">
          <div class="col-md-6">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control #{resource.errors[:username].any? ? 'is-invalid' : ''}", autocomplete: "username" %>
            <% if resource.errors[:username].any? %>
              <div class="invalid-feedback">
                <%= resource.errors[:username].join(', ') %>
              </div>
            <% end %>
          </div>
          <div class="col-md-6 mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control #{resource.errors[:email].any? ? 'is-invalid' : ''}", autocomplete: "email" %>
            <% if resource.errors[:email].any? %>
              <div class="invalid-feedback">
                <%= resource.errors[:email].join(', ') %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row mb-3 g-3">
          <div class="col-md-6">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control #{resource.errors[:password].any? ? 'is-invalid' : ''}", autocomplete: "new-password" %>
            <% if resource.errors[:password].any? %>
              <div class="invalid-feedback">
                <%= resource.errors[:password].join(', ') %>
              </div>
            <% end %>
            <% if @minimum_password_length %>
              <em class="d-block mb-2">(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>

          <div class="col-md-6">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation,
                             class: "form-control #{resource.errors[:password_confirmation].any? ? 'is-invalid' : ''}",
                             autocomplete: "new-password" %>
            <% if resource.errors[:password_confirmation].any? %>
              <div class="invalid-feedback">
                <%= resource.errors[:password_confirmation].join(', ') %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="text-center">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
