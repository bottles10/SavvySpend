<%= form_with(model: expense, class: "expense-form") do |form| %>
      <div class="row justify-content-center">
        <div class="col-md-8">
        <% if expense.errors.any? %>
    <div style="color: red; border: 1px solid red; padding: 10px; margin: 20px auto">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
        <div class="mb-3">
          <%= form.label :budget_id, class: "form-label" %>
          <div class="input-group">
            <%= form.collection_select :budget_id, Budget.all, :id, :category, { prompt: "Select or create new budget" }, class: "form-select" %>
            <a href="<%= new_budget_path %>" class="btn btn-outline-secondary">Create New Budget</a>
          </div>
        </div>
        <div class="mb-3">
          <%= form.label :date, class: "form-label" %>
          <%= form.date_field :date, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :amount, class: "form-label" %>
          <%= form.text_field :amount, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :category, class: "form-label" %>
          <%= form.text_field :category, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :payment_method, class: "form-label" %>
          <%= form.text_field :payment_method, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= form.label :notes, class: "form-label" %>
          <%= form.text_area :notes, class: "form-control", rows: 3 %>
        </div>
        <div class="text-center">
          <%= form.submit "Save Expense", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
<% end %>
